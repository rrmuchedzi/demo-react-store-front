{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "lib": ["es2015", "es2017", "es2019", "es2020", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,
        "skipLibCheck": true
    },
    "exclude": ["**/node_modules", "**/.*/", "types/*.spec.tsx", "types/*.spec.ts"],
    "include": ["src/**/*", "types/*.d.ts", "stories"]
}
